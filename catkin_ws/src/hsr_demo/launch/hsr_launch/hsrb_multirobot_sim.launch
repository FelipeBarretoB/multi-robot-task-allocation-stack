<launch>
  <arg name="debug" default="false"/>
  <arg name="gui" default="true" />
  <arg name="rviz" default="true"/>
  <arg name="gazebo_visualization" default="false" />
  <arg name="use_manipulation" default="false" />
  <arg name="use_navigation" default="true" />
  <arg name="use_perception" default="false" />
  <arg name="use_task" default="true" />
  <arg name="use_teleop" default="true" />
  <arg name="use_web" default="false" />
  <arg name="use_laser_odom" default="true" />
  <arg name="paused" default="true" />
  <arg name="fast_physics" default="false" />

  <arg unless="$(arg fast_physics)" name="world_suffix" value=""/>
  <arg     if="$(arg fast_physics)" name="world_suffix" value="_fast"/>

  <!-- <arg name="namespace" default="hsrb"/>
  <arg name="personal_name" default="" />
  <arg name="robot_name" default="$(optenv ROBOT_NAME hsrb)" /> -->

  <!-- Start Gazebo -->
  <arg name="world_name" default="$(find tmc_gazebo_worlds)/worlds/megaweb2015$(arg world_suffix).world"/>
  <param name="/use_sim_time" value="true"/>
  <group>
      <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="paused" value="$(arg paused)"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="$(arg gui)"/>
        <arg name="debug" value="$(arg debug)"/>
        <arg name="world_name" value="$(arg world_name)"/>
      </include>
  </group>

  <!-- Robot 1 -->
  <include file="$(find hsr_demo)/launch/hsr_launch/hsrb_gazebo_common.xml" pass_all_args="true" >
    <arg name="map" default="$(find tmc_potential_maps)/maps/mega-web/map.yaml" />
    <arg name="world_name" value="$(find hsr_demo)/worlds/naman_wall_environment.world" />
    <arg name="robot_pos" value="-x -1 -y -7.5 -z 0.32 -Y 1.57"/>
    <arg name="ground_truth_xyz_offset" value="7.5\ -1.0\ -0.304866" />
    <arg name="ground_truth_rpy_offset" value="0.0\ 0.0\ -1.57" />
    <arg name="namespace" value="hsrb" />
    <arg name="personal_name" value="hsrb" />
    <arg name="robot_name" value="hsrb" />
  </include>

  <!-- Robot 2 -->
  <include file="$(find hsr_demo)/launch/hsr_launch/hsrb_gazebo_common.xml" pass_all_args="true" >
    <arg name="map" default="$(find tmc_potential_maps)/maps/mega-web/map.yaml" />
    <arg name="world_name" value="$(find hsr_demo)/worlds/naman_wall_environment.world" />
    <arg name="robot_pos" value="-x -2 -y -7.5 -z 0.32 -Y 1.57"/>
    <arg name="ground_truth_xyz_offset" value="7.5\ -1.0\ -0.304866" />
    <arg name="ground_truth_rpy_offset" value="0.0\ 0.0\ -1.57" />
    <arg name="namespace" value="hsrb2" />
    <arg name="personal_name" value="hsrb2" />
    <arg name="robot_name" value="hsrb" />
  </include>


</launch>
